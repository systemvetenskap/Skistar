
@model Skistar.ViewModels.StatisticsViewModel
@{
    ViewData["Title"] = "Statistik";
}

<div class="row">
    <!-- Statistik-kort -->
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">Totala fallhöjdsmeter</div>
            <div class="card-body">
                <h5 class="card-title">@Model.TotalMeters m</h5>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-header">Antal Åk</div>
            <div class="card-body">
                <h5 class="card-title">@Model.TotalRides</h5>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-warning mb-3">
            <div class="card-header">Dagar på snö</div>
            <div class="card-body">
                <h5 class="card-title">10</h5>
            </div>
        </div>
    </div>
</div>

<!-- Lista med vänner -->
<div class="row">
    <div class="col-md-12">
        <h3>Mina vänner</h3>
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Anna Svensson
                <span class="badge bg-primary rounded-pill">30 åk</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Erik Johansson
                <span class="badge bg-primary rounded-pill">22 åk</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Lisa Bergström
                <span class="badge bg-primary rounded-pill">18 åk</span>
            </li>
        </ul>
    </div>
</div>

