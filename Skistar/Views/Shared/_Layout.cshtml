<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Skidstatistik</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    @* <link rel="stylesheet" href="~/css/site.css"> *@
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#007bff">
</head>
<body>

    <!-- Navigeringsfält -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Skidstatistik</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#">Statistik</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Vänner</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Logga ut</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Huvudinnehåll -->
    <div class="container mt-4">
        @RenderBody()
    </div>
    @RenderSection("scripts", false)
    <!-- Bootstrap-script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        if ("serviceWorker" in navigator) {
          navigator.serviceWorker.register("/sw.js").then(function (registration) {
            console.log("Service Worker registered with scope:", registration.scope);
          }).catch(function (error) {
            console.log("Service Worker registration failed:", error);
          });
        }
    </script>
</body>
</html>
