<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Skidstatistik</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link href="site.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigeringsfält -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Skidstatistik</a>
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#">Statistik</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Vänner</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Logga ut</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Dashboard-sektion -->
    <div class="container mt-4">
        <div class="row">
            <!-- Statistik-kort -->
            <div class="col-md-4">
                <div class="card text-white bg-success mb-3">
                    <div class="card-header">Total Fallhöjdsmeter</div>
                    <div class="card-body">
                        <h5 class="card-title">12 345 m</h5>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-white bg-info mb-3">
                    <div class="card-header">Antal Åk</div>
                    <div class="card-body">
                        <h5 class="card-title">78</h5>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-header">Dagar på snö</div>
                    <div class="card-body">
                        <h5 class="card-title">10</h5>
                    </div>
                </div>
            </div>
        </div>

        <!-- Lista med vänner -->
        <div class="row">
            <div class="col-md-12">
                <h3>Mina vänner</h3>
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Anna Svensson
                        <span class="badge bg-primary rounded-pill">30 åk</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Erik Johansson
                        <span class="badge bg-primary rounded-pill">22 åk</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Lisa Bergström
                        <span class="badge bg-primary rounded-pill">18 åk</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Bootstrap-script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


